{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "stripInternal": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types",
      "src/types/lodash"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "react-jss": [
        "node_modules/react-jss"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json"
  ],
  "exclude": [
    ".storybook",
    "store/actions",
    "store/reducers",
    "**/node_modules",
    "**/*./",
    "dist",
    "__test__",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__mocks",
    "**/__tests__"
  ]
}